{
  "window.commandCenter": 1,
  "git.enableSmartCommit": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "workbench.colorTheme": "Catppuccin Mocha",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.fontFamily": "JetBrainsMono Nerd Font, JetBrainsMono NF, monospace",
  // vim setup
  "vim.useSystemClipboard": true,
  "vim.foldfix": true,
  "workbench.preferredLightColorTheme": "Catppuccin Latte",
  "workbench.preferredDarkColorTheme": "Catppuccin Mocha",
  "window.systemColorTheme": "auto",
  "window.autoDetectColorScheme": true,
  "cursor.composer.shouldAllowCustomModes": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "lazygit-vscode.configPath": "~/.config/lazygit/config-light.yml",
  "gitlens.plusFeatures.enabled": false,
  "gitlens.views.commitDetails.files.layout": "tree",
  "command-runner.commands": {
    "swapTestFile": "bun ~/.config/vscode/go-to-sibling.ts"
  },
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "editor.minimap.renderCharacters": false,
  "jest.runMode": "on-demand",
  "editor.inlayHints.enabled": "on",
  "editor.cursorSurroundingLines": 20,
  "editor.cursorSurroundingLinesStyle": "default",
  "breadcrumbs.enabled": true,
  "git-worktree-menu.worktreeDir": "~/projects/onsi-repo",
  "cursor.cpp.disabledLanguages": ["plaintext"],
  "cursor.cpp.enablePartialAccepts": true,
  "githubPullRequests.pullBranch": "never",
  "datadog.telemetry.setup.suppressMigrationNotification": true,
  "datadog.telemetry.setup.enableTelemetry": "disabled",
  "playwright.reuseBrowser": true,
  "playwright.showTrace": false
}
